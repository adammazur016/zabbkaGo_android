<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/star_logo_view"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/ach_star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30sp"
        />

    <TextView
        android:id="@+id/achievement_title"
        app:layout_constraintTop_toBottomOf="@id/star_logo_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Achievement title"
        android:textSize="24sp"
        >

    </TextView>
    <TextView
        android:id="@+id/achievement_description"
        app:layout_constraintTop_toBottomOf="@id/achievement_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Achievement description"
        android:textSize="18sp">
    </TextView>
    <ProgressBar
        android:id="@+id/achievement_progress"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        app:layout_constraintTop_toBottomOf="@id/achievement_description"
        android:max="100"
        android:progress="50"
        />

</androidx.constraintlayout.widget.ConstraintLayout>